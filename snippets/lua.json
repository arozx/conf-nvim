{
  "Function": {
    "prefix": "fn",
    "body": [
      "function ${1:name}(${2:args})",
      "\t${0}",
      "end"
    ],
    "description": "Create a Lua function"
  },
  "Local Function": {
    "prefix": "lfn",
    "body": [
      "local function ${1:name}(${2:args})",
      "\t${0}",
      "end"
    ],
    "description": "Create a local Lua function"
  },
  "Require": {
    "prefix": "req",
    "body": "local ${1:module} = require('${2:$1}')",
    "description": "Require a module"
  },
  "If Statement": {
    "prefix": "if",
    "body": [
      "if ${1:condition} then",
      "\t${0}",
      "end"
    ],
    "description": "If statement"
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "for ${1:i} = ${2:1}, ${3:10} do",
      "\t${0}",
      "end"
    ],
    "description": "Numeric for loop"
  },
  "For In Pairs": {
    "prefix": "forp",
    "body": [
      "for ${1:key}, ${2:value} in pairs(${3:table}) do",
      "\t${0}",
      "end"
    ],
    "description": "For in pairs loop"
  },
  "For In IPairs": {
    "prefix": "fori",
    "body": [
      "for ${1:index}, ${2:value} in ipairs(${3:table}) do",
      "\t${0}",
      "end"
    ],
    "description": "For in ipairs loop"
  }
}

